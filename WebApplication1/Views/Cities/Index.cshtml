@model IEnumerable<WebApplication1.Models.Entities.Cities>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h1>Cities</h1>
<p>
    @ViewBag.test
</p>
<p>
    @Html.ActionLink("Create New", "Create")
    <br />
    @Html.ActionLink("Update City", "Update")
    <br />
    @Html.ActionLink("Delete City", "Delete")
</p>
<table>
    <thead>
    <th>@Html.DisplayNameFor(model => model.CityID)</th>
    <th>
        @Html.DisplayNameFor(model => model.CityName)
</th>
    </thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.CityID)</td>
            <td>@Html.DisplayFor(model => item.CityName)</td>
        </tr>
    }
</tbody>
</table>
